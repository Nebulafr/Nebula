{
  "name": "nebula-monorepo",
  "private": true,
  "workspaces": [
    "nebula-app",
    "nebula-messaging"
  ],
  "scripts": {
    "dev:app": "npm run dev -w nebula-app",
    "dev:messaging": "npm run dev -w nebula-messaging",
    "build:app": "npm run build -w nebula-app",
    "build:messaging": "npm run build -w nebula-messaging",
    "build": "npm run build -ws",
    "dev": "concurrently \"npm run dev:app\" \"npm run dev:messaging\"",
    "start": "concurrently \"npm run start:app\" \"npm run start:messaging\"",
    "install:app": "npm install -w nebula-app",
    "install:messaging": "npm install -w nebula-messaging",
    "install:all": "npm install -ws"
  },
  "devDependencies": {
    "concurrently": "^9.2.1"
  }
}
