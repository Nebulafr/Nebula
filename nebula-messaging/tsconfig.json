{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": false,
    "strict": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,

    "declaration": false,
    "outDir": "dist",
    "rootDir": "src",

    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false,
    "incremental": true,

    "types": ["node"],

    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
      "@/types": ["types"],
      "@/lib/*": ["lib/*"],
      "@/services/*": ["services/*"],
      "@/handlers/*": ["handlers/*"],
      "@/middleware/*": ["middleware/*"]
    }
  },

  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma/migrations"],

  "ts-node": {
    "esm": true,
    "experimentalResolver": true
  }
}
