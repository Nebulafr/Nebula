{
  "name": "nebula-socket-server",
  "version": "1.0.0",
  "description": "Socket.IO server for Nebula messaging",
  "main": "dist/server.js",
  "scripts": {
    "start": "node dist/server.js",
    "dev": "tsx watch src/server.ts",
    "prebuild": "npm run db:generate",
    "build": "npx esbuild src/server.ts --bundle --platform=node --outfile=dist/server.js --packages=external",
    "build:watch": "npx esbuild src/server.ts --bundle --platform=node --outfile=dist/server.js --packages=external --watch",
    "db:generate": "npx prisma generate",
    "type-check": "tsc --noEmit",
    "clean": "rm -rf dist node_modules/.cache"
  },
  "dependencies": {
    "@prisma/adapter-pg": "^7.0.0",
    "@prisma/client": "^7.0.0",
    "dotenv": "^16.6.1",
    "jsonwebtoken": "^9.0.0",
    "pg": "^8.13.1",
    "socket.io": "^4.8.1"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.7",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.11.10",
    "esbuild": "^0.27.2",
    "prisma": "^7.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.6.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "keywords": [
    "socket.io",
    "websocket",
    "messaging",
    "real-time"
  ],
  "author": "Nebula Team",
  "license": "MIT"
}
